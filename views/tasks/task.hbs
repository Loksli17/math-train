<link rel="stylesheet" href="/css/tasks/task.css">

<div class="page-wrap">
    <div class="section">
        <h2>{{task.title}}</h2>
        <div class="text">
            <span>{{task.text}}</span>
        </div>
        <div class="train-wrap">
            {{> (lookup . 'file') }}
        </div>
    </div>
    <div class="aside">
        <h2>Дополнительная информация</h2>
        <div class="content">
            <div class="diff {{task.cltitle}}">
                 {{task.ctitle}}
            </div>
            <div class="tags">
                <h3>Направления тренажера</h3>
                {{#each tags}}
                    <li>{{title}}</li>
                {{/each}}
            </div>
            <div class="attempts">
                <h3>Последние 5 попыток</h3>
                {{#if results.length}}
                    {{#each results}}
                        <div class="">
                            {{#if isRight}}
                            <span style="color: green">Верно</span>
                            {{else}}
                            <span style="color: red">Неверно</span>
                            {{/if}}
                        </div>
                        {{/each}}
                {{else}}
                    <em>Вы еще не решали данный тренажер</em>
                {{/if}}
            </div>
        </div>
    </div>
</div>
